{
    "name": "ineersa/database-mcp",
    "description": "MCP server implementation to work with SQL databases",
    "version": "0.0.11",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Illia Vasylevskyi",
            "email": "ineersa@gmail.com"
        }
    ],
    "repositories": [],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-fileinfo": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-pdo_pgsql": "*",
        "ext-pdo_sqlsrv": "*",
        "ext-pdo_sqlite": "*",
        "doctrine/dbal": "^4.4.1",
        "doctrine/doctrine-bundle": "^2.18.2",
        "mcp/sdk": ">=0.3",
        "symfony/console": "7.4.*",
        "symfony/dotenv": "7.4.*",
        "symfony/flex": "^2.10",
        "symfony/framework-bundle": "7.4.*",
        "symfony/monolog-bundle": "^3.11.1",
        "symfony/runtime": "7.4.*",
        "symfony/yaml": "7.4.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.92.5",
        "phpstan/phpstan": "^1.12.32",
        "phpunit/phpunit": "^12.5.6",
        "symfony/browser-kit": "7.4.*",
        "symfony/css-selector": "7.4.*",
        "symfony/maker-bundle": "1.x-dev",
        "symfony/process": "7.4.*",
        "symfony/var-dumper": "7.4.*"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "bump-after-update": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "post-autoload-dump": [
            "@auto-scripts"
        ],
        "cs-fix": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.dist.neon",
        "docker-build": "docker build -t ineersa/database-mcp:latest .",
        "docker-rebuild": "docker build --no-cache -t ineersa/database-mcp:latest .",
        "docker-test-build": "docker compose -f docker-compose.test.yaml build php-test",
        "tests": [
            "docker compose -f docker-compose.test.yaml up -d --wait --build",
            "docker compose -f docker-compose.test.yaml exec php-test composer install",
            "docker compose -f docker-compose.test.yaml exec php-test php bin/console database:fixtures:load",
            "docker compose -f docker-compose.test.yaml exec php-test vendor/bin/phpunit --colors=always --testdox"
        ],
        "coverage": [
            "docker compose -f docker-compose.test.yaml up -d --wait --build",
            "docker compose -f docker-compose.test.yaml exec php-test composer install",
            "docker compose -f docker-compose.test.yaml exec php-test php bin/console database:fixtures:load",
            "docker compose -f docker-compose.test.yaml exec -e XDEBUG_MODE=coverage php-test vendor/bin/phpunit --colors=always --testdox --coverage-text --coverage-html coverage/ --coverage-clover coverage/clover.xml"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.4.*"
        }
    }
}
